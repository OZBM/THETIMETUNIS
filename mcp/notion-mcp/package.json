{
  "name": "notion-mcp",
  "version": "0.1.0",
  "private": true,
  "description": "Local MCP server to create and update Notion pages from Markdown for THETUNISTIME documentation.",
  "type": "module",
  "bin": {
    "notion-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "start": "node build/index.js",
    "dev": "tsx watch src/index.ts",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "@notionhq/client": "^2.2.14",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "tsx": "^4.15.7",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.17"
  },
  "keywords": [
    "mcp",
    "notion",
    "documentation",
    "markdown"
  ],
  "license": "MIT"
}